    </p>
    <p id="result">Результат: @resultDate.ToString()</p>
</div>
<div id="checkbox">
    <p>
        Проверка CheckBox<br />
        <InputCheckbox @bind-Value="resultCheckBox" />
    </p>
    <p id="result">Результат: @resultCheckBox.ToString()</p>
</div>
<div id="radio">
    <p>
        Проверка RadioButtons<br />
        <InputRadioGroup @bind-Value="resultRadio">
            @foreach(var radio in listRadio)
            {
                <InputRadio Value="@radio" />@radio<br />
            }
        </InputRadioGroup>
    </p>
    <p id="result">Результат: @resultRadio</p>
</div>
<div id="combo">
    <p>
        Проверка СomboBox<br />
        <InputSelect @bind-Value="resultSelect" multiple >
            @foreach(var select in listSelect)
            {
                <option value="@select">@select</option>
            }
        </InputSelect>
    </p>
    <p id="result">Результат: @resultSelect </p>
</div>

@code {
    public string resultText = String.Empty;
    public int resultInt;
    public DateTime resultDate = DateTime.Now;
    public bool resultCheckBox;
    public string resultRadio = String.Empty;
    List<string> listRadio = ["1", "2", "3", "4", "5"];
    public string resultSelect = String.Empty;
    List<string> listSelect = ["1", "2", "3", "4", "5"];
}

